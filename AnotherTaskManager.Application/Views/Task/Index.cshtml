@using AnotherTaskManager.App.Models.Enumerators

@model IEnumerable<AnotherTaskManager.App.Models.DataModels.Task>

<div>
    <p>
        <a asp-action="Create" type="button" class="btn btn-primary">Add Task</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusNavigation.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusChanges)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateModified)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusNavigation.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusChanges)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                <td>
                <td>
                    @if (item.Status != (int)TaskStatusEnumeration.COMPLETED) {
                          
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span> | </span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>